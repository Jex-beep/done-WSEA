<IfModule mod_rewrite.c>
  RewriteEngine On
  RewriteBase /

  # 1. FORCE HTTPS
  RewriteCond %{HTTPS} off
  RewriteRule ^ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

  # 2. SKIP REWRITING FOR API
  RewriteRule ^api/ - [L]

  # 3. SERVE EXISTING FILES
  # If the file or directory exists, serve it directly and stop (L)
  RewriteCond %{REQUEST_FILENAME} -f [OR]
  RewriteCond %{REQUEST_FILENAME} -d
  RewriteRule ^ - [L]

  # 4. ANGULAR ROUTING 
  # If it's not a real file/folder, let Angular handle the URL
  RewriteRule . /index.html [L]
</IfModule>

# 5. CUSTOM 404
ErrorDocument 404 /index.html